@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <title>Durandal Starter Kit</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Carrois+Gothic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Carrois+Gothic+SC' rel='stylesheet' type='text/css'>

    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
    <link rel="apple-touch-icon" href="~/Content/images/icon.png" />

    @Styles.Render("~/Content/css")

    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>

<body>
    <header>
        <div id="pagetop" class="container">
            <div class="row-fluid">
                <div class="span10">
                    <div class="pull-left">
                        <p class="site-title">My Musicator</p>
                    </div>
                    <div class="pull-right">
                        <nav>
                            <ul id="menu">
                                <li><a href="#/" rel="tooltip" title="Go to the main page">Home</a></li>
                                <li><a href="#/AlbumsReview" rel="tooltip" title="Review and rate albums">Review</a></li>
                                <li><a href="#/ArtistsDirectory" rel="tooltip" title="Go to artist directory">Artists</a></li>
                                <li><a href="#/AlbumsDirectory" rel="tooltip" title="Go to albums directory">Albums</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="applicationHost" class="min-height">
        @Html.Partial("_splash")
    </div>
    <footer>
        <div class="container">
            <div class="pull-left">
                <p>&copy; @DateTime.Now.Year - My Musicator</p>
            </div>
            <div class="pull-right">
                <ul id="social">
                    <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                    <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                </ul>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/scripts/vendor")

    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script type="text/javascript" src="~/App/durandal/amd/require.js" data-main="@Url.Content("~/App/main")"></script>
    }
    else
    {
        <script type="text/javascript" src="~/App/main-built.js"></script>
    }
</body>
</html>
